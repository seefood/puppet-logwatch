# logwatch.conf: Managed by puppet.
#
# Local configuration options go here (defaults are in /usr/share/logwatch/default.conf/logwatch.conf)

<% if @output -%>
Output = <%= @output %>
<% end -%>
<% if @format -%>
Format = <%= @format %>
<% end -%>
MailTo = <%= @mail_to.join(' ') %>
<% if @mail_from -%>
MailFrom = <%= @mail_from %>
<% end -%>
<% if @range -%>
Range = <%= @range %>
<% end -%>
<% if @detail -%>
Detail = <%= @detail %>
<% end -%>
<% @service.each do |ser| -%>
Service = <%= ser %>
<% end -%>
<% if @settings and ! @settings.empty? -%>
  <%- @settings.each do |key, value| -%>
<%= key %> = <%= value %>
  <%- end -%>
<%- end -%>
